<%= semantic_form_for(@device, :html => {:class => 'edit_device'}) do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <legend>Edit Device</legend>
    <%= f.input :name %>
    <%= f.input :deviceid %>
    <%= f.input :password, :as => :string, :hint => "The password text is not hidden" %>
    <%= f.input :location %>
    <%= f.input :slideshow %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>

<% end %>
