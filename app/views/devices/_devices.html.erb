<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>Device</th>
  </tr>
  </thead>
  <tbody>
<% @devices.each do |dev| %>
  <tr>
    <td><%= link_to dev.name, new_device_path(:name => dev.name) %></td>
  </tr>
<% end %>
<% if @devices.empty? %>
  <tr><td>No devices were found.</td></tr>
<% end %>
  </tbody>
</table>
