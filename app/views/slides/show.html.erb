<%= render :partial => 'breadcrumbs', :object => [
           { :url => '/slides', :name => 'Slides'},
           { :url => '', :name => 'Slide: ' + @slide.name }
           ] %>

<div class="well">
<p>
  <b>Name:</b>
  <%= @slide.name %>
</p>

<p>
  <b>Url:</b>
  <%= @slide.url %>
</p>

<p>
  <b>Display time:</b>
  <%= @slide.display_time %> seconds
</p>

<p>
  <b>Transition:</b>
  <%= @slide.transition_name %>
</p>
</div>

<%= link_to 'Edit', edit_slide_path(@slide), :class=>'btn' %>
