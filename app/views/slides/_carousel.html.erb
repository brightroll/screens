<%
  # Render a set of slides using Bootstrap Carousel
  # Supports: Images
  # TODO: Hacks for Graphite, embedded video, external sites
%>

<% if !slides.nil? and !slides.empty? %>
<div id="<%= defined?(id) && id || 'myCarousel' %>" class="carousel slide <%= defined?(html_class) && html_class %>">
  <div class="carousel-inner">
<%   slides.each do |slide| %>
<%     next unless slide.media_type == 'image' %>
    <div class="item">
      <img src="<%= slide.url %>" alt="">
      <div class="carousel-caption">
        <h4><%= slide.name %></h4>
      </div>
    </div>
<%   end %>
  </div>
  <a class="left carousel-control" href="#<%= defined?(id) && id || 'myCarousel' %>" data-slide="prev">&lsaquo;</a>
  <a class="right carousel-control" href="#<%= defined?(id) && id || 'myCarousel' %>" data-slide="next">&rsaquo;</a>
</div>
<% end %>
